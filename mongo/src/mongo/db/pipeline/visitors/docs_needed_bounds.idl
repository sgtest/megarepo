global:
    cpp_namespace: "mongo::docs_needed_bounds"
    cpp_includes:
        - "mongo/db/pipeline/visitors/docs_needed_bounds.h"

imports:
    - "mongo/db/basic_types.idl"

types:
    DocsNeededBounds:
        bson_serialization_type: any
        description: >-
            Bounds that indicate the upper or lower limit of number of documents needed to scan in
            order to satisfy a query. The value will one of "Unknown", "NeedAll", or a discrete
            value (long long).
        cpp_type: Bounds
        serializer: ::mongo::docs_needed_bounds::serializeDocsNeededBounds
        deserializer: ::mongo::docs_needed_bounds::parseDocsNeededBoundsFromBSON
        is_view: false
