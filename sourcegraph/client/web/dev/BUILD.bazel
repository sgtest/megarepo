        "rxjs/_esm5/internal/OuterSubscriber",
        "rxjs/_esm5/internal/util/subscribeToResult",
        "rxjs/_esm5/internal/util/subscribeToArray",
        "rxjs/_esm5/internal/Observable",
    ],
    format = "cjs",
    platform = "node",
    sourcemap = False,
    splitting = False,
    target = "es2022",
    visibility = ["//client:__subpackages__"],
    deps = [
        "//:postcss_config_js",
