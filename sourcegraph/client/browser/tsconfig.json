{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["../../node_modules/@types", "src/types"],
    "jsx": "react",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "config/**/*.js",
    "config/**/*.ts",
    "cypress/**/*.ts",
    "scripts/**/*.ts",
    "*.ts"
  ],
  "exclude": ["./build/**/*", "./*.safariextension"]
}
