{
  "$schema": "http://json.schemastore.org/webextension",
  "version": "0.0.0",
  "name": "Sourcegraph",
  "manifest_version": 2,
  "description": "Adds code intelligence to GitHub: hovers, definitions, references. Supports 20+ languages and other popular code hosts, too.",
  "browser_action": {
    "default_title": "Sourcegraph",
    "default_icon": {
      "16": "img/icon-16.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    }
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "background": {
    "scripts": ["js/background.bundle.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "storage": {
    "managed_schema": "schema.json"
  },
  "optional_permissions": ["tabs", "http://*/*", "https://*/*"],
  "content_security_policy": "script-src 'self' blob:; object-src 'self'",
  "web_accessible_resources": ["img/*", "css/style.bundle.css", "css/branded-style.bundle.css"],
  "omnibox": {
    "keyword": "src"
  },
  "applications": {
    "gecko": {
      "id": "sourcegraph-for-firefox@sourcegraph.com",
      "update_url": "https://storage.googleapis.com/sourcegraph-for-firefox/updates.json"
    }
  },
  "dev": {
    "content_scripts": [
      {
        "matches": [
          "https://github.com/*",
          "https://sourcegraph.com/*",
          "https://localhost:3443/*",
          "http://localhost:32773/*"
        ],
        "run_at": "document_end",
        "js": ["/js/inject.bundle.js"]
      }
    ],
    "permissions": [
      "storage",
      "activeTab",
      "contextMenus",
      "https://github.com/*",
      "https://gitlab.com/*",
      "https://localhost:3443/*",
      "https://sourcegraph.com/*",
      "http://localhost:32773/*"
    ],
    "key": ""
  },
  "prod": {
    "content_scripts": [
      {
        "matches": ["https://github.com/*", "https://sourcegraph.com/*"],
        "run_at": "document_end",
        "js": ["js/inject.bundle.js"]
      }
    ],
    "permissions": ["activeTab", "storage", "contextMenus", "https://github.com/*", "https://sourcegraph.com/*"]
  }
}
