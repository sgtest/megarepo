{
  "name": "@sourcegraph/cody",
  "private": true,
  "description": "Sourcegraph Cody",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/cody"
  },
  "engines": {
    "pnpm": "^7.24.2"
  },
  "packageManager": "pnpm@7.24.2",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier '**/{*.{js?(on),ts?(x),graphql,md,scss},.*.js?(on)}' --list-different --config prettier.config.js --write",
    "prebuild": "pnpm exec tsc --build",
    "vsce:package": "pnpm --filter kodj run vsce:package",
    "vsce:watch": "pnpm --filter kodj run watch"
  },
  "devDependencies": {
    "@sourcegraph/eslint-config": "^0.33.0",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.26.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
