go_test(
    name = "gerrit_test",
    timeout = "short",
    srcs = ["config_test.go"],
    embed = [":gerrit"],
    deps = [
        "//internal/conf",
        "//internal/extsvc",
        "//schema",
        "@com_github_google_go_cmp//cmp",
    ],
