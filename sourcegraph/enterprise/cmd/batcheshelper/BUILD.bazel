go_test(
    name = "batcheshelper_test",
    srcs = ["main_test.go"],
    embed = [":batcheshelper_lib"],
    deps = [
        "//lib/batches/execution",
        "//lib/errors",
        "@com_github_stretchr_testify//assert",
