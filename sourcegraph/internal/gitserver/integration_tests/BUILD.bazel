load("//dev:go_defs.bzl", "go_test")
load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "integration_tests",
    srcs = [
        "doc.go",
        "test_utils.go",
    ],
    importpath = "github.com/sourcegraph/sourcegraph/internal/gitserver/integration_tests",
    visibility = ["//:__subpackages__"],
    deps = [
        "//cmd/gitserver/server",
        "//internal/api",
        "//internal/database",
        "//internal/extsvc",
        "//internal/gitserver",
        "//internal/gitserver/v1:gitserver",
        "//internal/grpc",
        "//internal/grpc/defaults",
        "//internal/httpcli",
        "//internal/observation",
        "//internal/types",
        "@com_github_sourcegraph_log//:log",
        "@org_golang_x_sync//semaphore",
    ],
)

go_test(
    name = "integration_tests_test",
    timeout = "short",
    srcs = [
        "commits_test.go",
        "main_test.go",
        "object_test.go",
        "tree_test.go",
    ],
    embed = [":integration_tests"],
    # This test loads coursier as a side effect, so we ensure the
    # path is sandboxed properly.
    env = {"COURSIER_CACHE_DIR": "/tmp"},
    deps = [
        "//internal/actor",
        "//internal/api",
        "//internal/authz",
        "//internal/conf",
        "//internal/database",
        "//internal/gitserver",
        "//internal/gitserver/gitdomain",
        "//schema",
        "@com_github_google_go_cmp//cmp",
        "@com_github_sourcegraph_log//:log",
        "@com_github_sourcegraph_log//logtest",
    ],
)
