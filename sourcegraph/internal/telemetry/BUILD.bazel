load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("//dev:go_defs.bzl", "go_test")

go_library(
    name = "telemetry",
    srcs = [
        "besteffort.go",
        "billing_categories.go",
        "billing_products.go",
        "events.go",
        "telemetry.go",
        "telemetrygateway.go",
    ],
    importpath = "github.com/sourcegraph/sourcegraph/internal/telemetry",
