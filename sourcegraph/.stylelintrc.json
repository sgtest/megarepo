{
  "extends": ["@sourcegraph/stylelint-config"],
  "plugins": ["@sourcegraph/stylelint-plugin-sourcegraph"],
  "rules": {
    "@sourcegraph/filenames-match-regex": [
      true,
      {
        "regexp": "^.+\\.module(\\.scss)$"
      }
    ],
    "@sourcegraph/no-restricted-imports": [
      true,
      {
        "paths": ["bootstrap*"]
      }
    ]
  }
}
