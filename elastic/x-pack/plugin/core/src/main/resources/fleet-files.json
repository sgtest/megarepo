{
  "index_patterns": [
    ".fleet-files-*-*"
  ],
  "priority": 200,
  "composed_of": [],
  "_meta": {
    "description": "fleet files index template",
    "managed": true
  },
  "template": {
    "settings": {
      "index.lifecycle.name": ".fleet-files-ilm-policy",
      "index.auto_expand_replicas": "0-1"
    },
    "mappings": {
      "_doc": {
        "_meta": {
          "version": "${xpack.fleet.template.version}"
        },
        "dynamic": false,
        "properties": {
          "upload_start": {
            "type": "date"
          },
          "agent_id": {
            "type": "keyword"
          },
          "action_id": {
            "type": "keyword"
          },
          "source": {
            "type": "keyword"
          },
          "upload_id": {
            "type": "keyword"
          },
          "file": {
            "properties": {
              "Status": {
                "type": "keyword"
              },
              "ChunkSize": {
                "type": "integer"
              },
              "Compression": {
                "type": "keyword"
              },
              "name": {
                "type": "keyword"
              }
            }
          }
        }
      }
    }
  },
  "version": ${xpack.fleet.template.version}
}