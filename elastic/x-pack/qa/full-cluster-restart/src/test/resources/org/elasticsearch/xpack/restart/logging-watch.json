{
  "trigger" : {
    "schedule": {
      "interval": "1s"
    }
  },
  "input" : {
    "search" : {
      "timeout": "100s",
      "request" : {
        "indices" : [ ".watches" ],
        "body" : {
          "query" : { "match_all" : {}},
          "size": 1
        }
      }
    }
  },
  "throttle_period": "1s",
  "actions" : {
    "log" : {
      "logging" : {
        "text" : "watcher search result: {{ctx.payload}}"
      }
    }
  }
}
